@model ML.Materia
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Formulario de Materias</h2>

<div class="row">
    <div class="col-12">
        <h2>Materia</h2>
        <h5>Ingrese los datos de la materia:</h5>
    </div>
</div>
</hr>

@using (Html.BeginForm("Form", "Materia", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="row">
    <div class="col-md-3" style="display: none;">
        @Html.TextBoxFor(model => model.IdMateria, new { @class = "hidden form-control", autocomplete = "off" })
    </div>
</div>
<div class="row">
    <div class="input-group mb-3">
        <span class="input-group-addon" id="basic-addon1"><i class="fa-solid fa-person-rays fa-beat"></i></span>
        @Html.TextBoxFor(model => model.Costo, new { @class = "form-control", @id = "txtCosto", @placeholder = "MXN", @onkeypress = "return SoloNumeros(event, 'lblCosto')" })
        @Html.ValidationMessageFor(model => model.Costo)
    </div>
    <div class="col-md-5">
        @Html.LabelFor(model => model.Nombre)
        <div class="input-group mb-5">
            <span class="input-group-text"><i class="fa-solid fa-person-rays fa-beat"></i></span>
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Ejemp: Historia", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        @Html.LabelFor(model => model.Costo)
        <div class="input-group mb-3">
            <span class="input-group-text"><i class="bi bi-controller"></i></span>
            @Html.TextBoxFor(model => model.Costo, new { @class = "form-control", @id = "txtNombre", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Costo, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        @Html.LabelFor(model => model.Creditos)
        <div class="input-group mb-3">
            <span class="input-group-text"><i class="bi bi-controller"></i></span>
            @Html.TextBoxFor(model => model.Creditos, new { @class = "form-control", @id = "txtNombre", @placeholder = "Ejemp: Historia", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Creditos, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-3">
        @Html.LabelFor(model => model.Semestre.IdSemestre)
        <div class="input-group mb-3">
            <span class="input-group-text"><i class="bi bi-controller"></i></span>
            @Html.TextBoxFor(model => model.Semestre.IdSemestre, new { @class = "form-control", @id = "txtNombre", @placeholder = "Ejemp: Historia", autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Semestre.IdSemestre, null, new { @class = "text-danger" })
        </div>
    </div>

</div>
    <div class="form-group">
        <div class="col-md-3">
            <input type="submit" value="Guardar" class="btn btn-success" />
            @Html.ActionLink("Regresar", "GetAll", "Materia", htmlAttributes: new { @class = "btn btn-danger" })
        </div>
    </div>
}
